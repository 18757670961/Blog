<!-- Search -->
<div class="search-page" style="background-color: rgba(255,255,255,0.8); backdrop-filter:blur(20px);">
  <div class="search-icon-close-container">
    <span class="search-icon-close">
      <i class="fa fa-chevron-down"></i>
    </span>
  </div>
  <div class="search-main container" style="overflow:auto;">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <input type="text" id="local-search-input"
          style="background-color:transparent; border:none; width:100%; height:2em;"
          placeholder="Enter post's title / tag / content">
        <hr>
        <div id="local-search-result" class="mini-post-list"></div>
      </div>
    </div>
  </div>
</div>